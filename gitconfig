[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[mergetool]
	keepBackup = false
[diff]
	tool = vimdiff
[difftool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  upstream = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	excludesfile = ~/.gitignore_global
	warnambiguousrefs = false
	editor = /usr/bin/vim
	autocrlf = input
[push]
	default = current
[pull]
	rebase = false
[rebase]
  autoStash = true
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[rerere]
  # https://git-scm.com/book/en/v2/Git-Tools-Rerere
  # Git will remember how conflicts have been resoled in the past
	enabled = true
[pager]
  branch = false
[alias]
  up = !git pull --prune $@
  amend = commit --amend

