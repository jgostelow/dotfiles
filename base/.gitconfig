  email = jonathan.gostelow@gmail.com
[diff]
  tool = vimdiff
[merge]
  tool = diffmerge
[mergetool "diffmerge"]
  cmd = =
  trustExitCode = true
[color]
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  upstream = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
  warnambiguousrefs = false
