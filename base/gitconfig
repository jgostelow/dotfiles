[merge]
	tool = diffconflicts
[mergetool]
	keepBackup = false
[mergetool "diffconflicts"]
	cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[diff]
	tool = vimdiff
[color]
	ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  upstream = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = ~/.gitignore_global
	warnambiguousrefs = false
	editor = vim
	autocrlf = input
[push]
	default = current
[pull]
	rebase = true
[rebase]
  autoStash = true
[rerere]
  # https://git-scm.com/book/en/v2/Git-Tools-Rerere
  # Git will remember how conflicts have been resoled in the past
	enabled = true
[pager]
  branch = false
[alias]
  up = !git pull --prune $@
  amend = commit --amend
  lastedit = log --pretty=format: --name-only -n 1
