[merge]
	tool = diffconflicts
[mergetool "diffconflicts"]
	cmd = vim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[mergetool]
	keepBackup = false
[diff "sopsdiffer"]
	textconv = sops -d
[diff]
	tool = vimdiff
[difftool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[color]
  branch = auto
  diff = auto
  status = auto
	ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  upstream = green
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[core]
	# pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = ~/.gitignore_global
	warnambiguousrefs = false
	editor = vim
	autocrlf = input
[push]
	default = current
[pull]
	rebase = true
[rebase]
  autoStash = true
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[rerere]
  # https://git-scm.com/book/en/v2/Git-Tools-Rerere
  # Git will remember how conflicts have been resoled in the past
	enabled = true
[pager]
  branch = false
[alias]
  up = !git pull --prune $@
  amend = commit --amend
  lastedit = log --pretty=format: --name-only -n 1
