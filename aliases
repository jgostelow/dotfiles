alias rm='rm -i'
alias cp='cp -i'
alias ll='ls -l'
alias la='ls -la'
alias less='less -r'
alias z='source ~/.zshrc'
alias vi=vim

# Git
alias gb="git branch -vv"
alias ga="git add -u"
alias gc="git checkout"
alias gl="git lg"
alias gs="git s"
alias gd="git diff"
alias gdt="git difftool -y"
alias gdtc="git difftool -y --cached"
alias gclean="git remote prune origin;git gc"
alias gu="git up"

# Docker
alias di='docker images'
alias drmi='docker rmi -f'
alias dps='docker ps -a'
alias dstopa='docker stop $(docker ps -aq)'
alias drma='docker rm $(docker ps -aq)'
alias drm='docker rm'
alias dvls='docker volume ls'
alias dvrma='docker volume rm $(docker volume ls -q)'
alias dcup='docker-compose up'
alias dcdown='docker-compose down -v'
function dbash() {
    docker exec -t -i $1 bash
}

# Ruby
alias be='bundle exec'
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi
